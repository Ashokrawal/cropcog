generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id                  String  @id @default(auto()) @map("_id") @db.ObjectId
  RecommendedProducts Boolean
  bestSellerDeals     Boolean
  cartHeight          Int
  cartWidth           Int
  category            String
  currentPrice        Int
  description         String
  discount            String
  height              Int
  image               String
  price               Int
  quantity            Int
  title               String
  trendingDeals       Boolean
  width               Int
  createAt            DateTime @default(now())
  updatedAt DateTime  @updatedAt

  @@map("products")
}
