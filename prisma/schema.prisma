generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ShippingDetail {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  email      String  @unique
  firstName  String
  lastName   String
  address    String
  city       String
  state      String
  phone      Int
  postalCode Int
  apartment  String?

  @@map("shipping_details")
}
